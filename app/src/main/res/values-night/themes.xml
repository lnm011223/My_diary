<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.My_diary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#3EB06A</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <color name="cardcolor">#2d2d2d</color>
    <color name="cardinlinecolor">#282828</color>
    <color name="smallcardcolor">#454545</color>
    <color name="backgroundcolor">#1E1E1E</color>
    <color name="diverLinecolor">#414141</color>
    <color name="cardtext">#e2e2e2</color>
    <color name="titletextcolor">#b9b9b9</color>
    <color name="strokecolor">#ffffff</color>
    <color name="smallcardtext">#202020</color>
    <color name="linecolor">#292929</color>
    <color name="greenbg">#262D22</color>
    <color name="green2">#1E241B</color>
    <color name="green3">#394531</color>
    <color name="green4">#E9FDDB</color>
    <color name="green5">#E9FDDB</color>
    <color name="green6">#6F9E4F</color>
    <color name="greentext">#E9FDDB</color>
    <style name="MyTabLayout">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!--实现BottomSheetDialog圆角效果-->
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>
    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <!--ShapeableImageView 圆 -->
    <style name="CircleStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">

        <!-- 调整 TabLayout 的顶部、底部内边距 -->
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>

        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>

        <!-- 调整 TabItem 的顶部、底部内边距 -->
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>

    </style>


</resources>